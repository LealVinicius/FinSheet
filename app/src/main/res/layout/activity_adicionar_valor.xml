<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionarValor">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText7"
        android:layout_width="166dp"
        android:layout_height="63dp"
        android:hint="DD/MM/AAAA"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="547dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText8"
        android:layout_width="166dp"
        android:layout_height="63dp"
        android:hint="selecione"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="categoria:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="398dp" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="523dp" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adicionar novo valor"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="84dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="6dp"
        android:text="despesa"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="valor:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="236dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="422dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barra"
        tools:layout_editor_absoluteX="-6dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#FF9999"
        app:rippleColor="#000000"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:layout_editor_absoluteX="348dp"
        tools:layout_editor_absoluteY="7dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="receita"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:background="#FF9999"
        android:text="Button"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="628dp"
        tools:text="ADICIONAR" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="166dp"
        android:layout_height="63dp"
        android:hint="R$:"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="260dp" />

</androidx.constraintlayout.widget.ConstraintLayout>